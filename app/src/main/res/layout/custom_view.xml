<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/baslik"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:text="Başlık"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        android:textScaleX="1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detailBaslik"
        android:layout_width="800px"
        android:layout_height="400px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baslik"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/aciklama"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:text="Açıklama"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailBaslik" />

    <Button
        android:id="@+id/ayrintiButon"
        android:layout_width="195dp"
        android:layout_height="44dp"
        android:text="AYRINTILAR"
        app:layout_constraintEnd_toStartOf="@+id/biletAlButon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aciklama" />

    <Button
        android:id="@+id/biletAlButon"
        android:layout_width="195dp"
        android:layout_height="44dp"
        android:text="BİLET AL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ayrintiButon"
        app:layout_constraintTop_toBottomOf="@+id/aciklama" />
</android.support.constraint.ConstraintLayout>